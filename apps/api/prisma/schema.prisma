generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../db/app.db"
}

model User {
  id            String   @id @default(uuid())
  username      String
  email         String   @unique
  password_hash String
  created_at    DateTime @default(now())

  transactions Transaction[]

  @@map("users")
}

model Transaction {
  id          String @id @default(uuid())
  description String
  value       Float
  type        String

  user_id String

  user User @relation(fields: [user_id], references: [id])

  @@map("transactions")
}
